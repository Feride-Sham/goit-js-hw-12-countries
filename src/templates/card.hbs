{{#each this}}
<h2 class="country-name">{{name}}</h2>
<section class="section-country">
  <div class='data'>
    <ul class='list'>
      <li class='info'>
        <h3>Capital:</h3>
        <p>{{capital}}</p>
      </li>
      <li class='info'>
        <h3>Population:</h3>
        <p>{{population}}</p>
      </li>
      <li class='info'>
        <h3>Languages:</h3>
        <ul class='list'>
          {{#each languages}}
          <li>{{this.name}}</li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </div>
  <div class="flag">
    <img src="{{flag}}" alt="{{name}}" width="300">
  </div>
</section>
{{/each}}